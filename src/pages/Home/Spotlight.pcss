.spots {
  > * {
    display: flex;
    height: 97vh;
  }

  > *:nth-child(1) {
    background-color: var(--yellow);
    /* background-image: linear-gradient(195deg, var(--base), var(--surface) 70%, var(--pink) 70%, var(--yellow)); */
  }

  > *:nth-child(2) {
    background-color: var(--orange);
  }

  > *:nth-child(3) {
    background-color: var(--turquoise);
  }

  > *:nth-child(4) {
    background-color: var(--pink);
  }
}